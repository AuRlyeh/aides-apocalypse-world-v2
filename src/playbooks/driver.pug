block uniqueability
  h3 Bagnoles

  - var carTitle = ['Ta bagnole', 'Bagnole 2', 'Bagnole 3', 'Véhicule de combat'];
  - var carCount = 4;
  - var idxCar = 0;

  .columns
    while idxCar < carCount
      .col
        h4.grow-1=carTitle[idxCar]
      - idxCar++;
  .columns.grow-1
    - idxCar = 0;
    while idxCar < carCount
      .col.row-container
        .editbox-xs
          label Châssis
        .columns
          .col
            .editbox-xs
              label Vitesse
          .col
            .editbox-xs
              label Maniabilité
        .columns
          .col
            .editbox-xs
              label Armure
          .col
            .editbox-xs
              label Taille
        .editbox-xs.grow-1
          label Mots-clés
      - idxCar++;

  p.help-text Ta bagnole a par défaut vitesse=0, maniabilité=0, 0-armure et sa taille correspondant à son châssis.
  .columns
    .col
      p
        strong Châssis
      ul.dot
        li
          span moto (taille=0, 1 option de combat)
        li
          span petite voiture, buggy (taille=1, 2 options de combat)
        li
          span coupé, berline, jeep, pick-up, fourgon, limo, 4x4, tracteur (taille=2, 2 options de combat)
        li
          span semi, bus, ambulance, construction/utilitaire (taille=3, 2 options de combat)
    .col
      p
        strong Points forts
        br
        | (1 ou 2 au choix) :
      ul.dot
        li
          span rapide
        li
          span robuste
        li
          span agressive
        li
          span compacte
        li
          span énorme
        li
          span tout-terrain
        li
          span nerveuse
        li
          span spacieuse
        li
          span endurante
        li
          span facile d’entretien
    .col
      p
        strong Apparences
        br
        | (1 ou 2 au choix) :
      ul.dot
        li
          span élégante
        li
          span vintage
        li
          span comme neuve
        li
          span puissante
        li
          span excentrique
        li
          span musclée
        li
          span flashy
        li
          span luxueuse
        li
          span mignonne
        li
          span artisanale
        li
          span gladiateur de la route
        li
          span criarde
    .col
      p
        strong Faiblesse
        br
        | (1 au choix) :
      ul.dot
        li
          span poussive
        li
          span bruyante
        li
          span manque de répondant
        li
          span perd des pièces
        li
          span rigide
        li
          span capricieuse
        li
          span consommatrice en carburant
        li
          span pas fiable
        li
          span suspensions trop souples
    .col
      p
